@using WebApplication3.Models;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title></title>
    <style>
        .tarihiGecmis {
            color: red;
        }
    </style>
</head>
<body>
    <h1>Sinema</h1>
    <h2>Güncel</h2>
    <ul>
      @foreach(var sinema in EtkinlikRepository.ListeyiDoldur())
      {
          if(sinema.EtkinlikTuru == EtkinlikTuru.Sinema)
          {
              <li class="@((sinema.BitisTarihi< DateTime.Now)?"tarihiGecmis": "")" >@sinema.Adi</li>
          }
      }
    </ul>
</body>
</html>
